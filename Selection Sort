#include <iostream>
using namespace std;

int main() {
    int array[] = {2, 6, 4, 8, 0, 4, 1};
    int size = sizeof(array) / sizeof(array[0]);

    for (int i = 0; i < size - 1; i++) {
        for (int j = i + 1; j < size; j++) {
            if (array[j] < array[i]) {
                int temp = array[j];
                array[j] = array[i];
                array[i] = temp;
            }
        }
    }

    for (int i = 0; i < size; i++) {
        cout << array[i] << " ";
    }

    return 0;
}
